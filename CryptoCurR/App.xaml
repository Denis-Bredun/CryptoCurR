<Application x:Class="CryptoCurR.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CryptoCurR"
             xmlns:converters="clr-namespace:CryptoCurR.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ToastNotifications.Messages;component/Themes/Default.xaml" />
                <ResourceDictionary Source="Styles/ProjectColors.xaml" />
                <ResourceDictionary Source="Styles/ProjectStylesNumbers.xaml" />
                <ResourceDictionary Source="Styles/ProjectStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:PriceChangeToBrushConverter x:Key="PriceChangeToBrushConverter" />
            <converters:BoolToVisConverter x:Key="BoolToVisConverter" />
            <converters:TimeframeToBrushMultiConverter x:Key="TimeframeToBrushMultiConverter"
                                     SelectedBrush="Red"
                                     DefaultBrush="Brown"/>
            <converters:MarketChartConverter x:Key="MarketChartConverter"/>
            <converters:OhlcSeriesConverter x:Key="OhlcSeriesConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
