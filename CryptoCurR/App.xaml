<Application x:Class="CryptoCurR.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CryptoCurR"
             xmlns:converters="clr-namespace:CryptoCurR.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ToastNotifications.Messages;component/Themes/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:PriceChangeToBrushConverter x:Key="PriceChangeToBrushConverter" />
            <converters:BoolToVisConverter x:Key="BoolToVisConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
