<UserControl x:Class="CryptoCurR.Views.CurrencyConverterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:CryptoCurR.Views"
             xmlns:vm="clr-namespace:CryptoCurR.ViewModels"
             xmlns:lottie="clr-namespace:LottieSharp.WPF;assembly=LottieSharp"
             mc:Ignorable="d">

    <Grid>
        <Grid Style="{StaticResource MainContentContainer}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" 
                        Style="{StaticResource ConverterHeader}">
                <Button Content="← Back" 
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource BackButton}"/>
                <TextBlock Text="Currency Converter" 
                           Style="{StaticResource ConverterTitleText}"/>
                <TextBlock Text="Convert between different cryptocurrencies" 
                           Style="{StaticResource ConverterSubtitleText}"/>
            </StackPanel>

            <Grid Grid.Row="1" 
                  Style="{StaticResource ConverterMainGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            Style="{StaticResource FromCurrencyPanel}">
                    <TextBlock Text="From" 
                               Style="{StaticResource CurrencyLabelText}"/>
                    <ComboBox ItemsSource="{Binding FromCurrencies}"
                              SelectedItem="{Binding SelectedFromCurrency}"
                              Style="{StaticResource CurrencyComboBox}"
                              ItemContainerStyle="{StaticResource CurrencyComboBoxItem}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Style="{StaticResource CurrencyItemPanel}">
                                    <Image Source="{Binding Image}" 
                                           Style="{StaticResource CurrencyItemIcon}"/>
                                    <TextBlock Text="{Binding Id}" 
                                               Style="{StaticResource CurrencyItemName}"/>
                                    <TextBlock Text="{Binding Symbol}" 
                                               Style="{StaticResource CurrencyItemSymbol}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource AmountTextBox}"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="⇄" 
                        Command="{Binding SwitchCurrenciesCommand}"
                        Style="{StaticResource SwitchButton}"/>

                <StackPanel Grid.Column="2" 
                            Style="{StaticResource ToCurrencyPanel}">
                    <TextBlock Text="To" 
                               Style="{StaticResource CurrencyLabelText}"/>
                    <ComboBox ItemsSource="{Binding ToCurrencies}"
                              SelectedItem="{Binding SelectedToCurrency}"
                              Style="{StaticResource CurrencyComboBox}"
                              ItemContainerStyle="{StaticResource CurrencyComboBoxItem}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Style="{StaticResource CurrencyItemPanel}">
                                    <Image Source="{Binding Image}" 
                                           Style="{StaticResource CurrencyItemIcon}"/>
                                    <TextBlock Text="{Binding Id}" 
                                               Style="{StaticResource CurrencyItemName}"/>
                                    <TextBlock Text="{Binding Symbol}" 
                                               Style="{StaticResource CurrencyItemSymbol}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="{Binding ConvertedAmount, StringFormat='{}{0:F8}'}"
                               Style="{StaticResource ConvertedAmountText}"/>
                </StackPanel>
            </Grid>


        </Grid>

        <Border Style="{StaticResource LoadingOverlayBorder}"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
            <lottie:LottieAnimationView
                FileName="Assets\\loading.json"
                Style="{StaticResource LoadingAnimation}"
                AutoPlay="True"/>
        </Border>
    </Grid>
</UserControl> 