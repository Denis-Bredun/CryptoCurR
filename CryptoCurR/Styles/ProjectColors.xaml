<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="PrimaryBackground" Color="#121212"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#1B1B1B"/>
    <SolidColorBrush x:Key="TertiaryBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="HeaderBackground" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="ButtonBackground" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#505050"/>
    <SolidColorBrush x:Key="ButtonPressedBackground" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="ButtonDisabledBackground" Color="#1E1E1E"/>
    
    <SolidColorBrush x:Key="PrimaryForeground" Color="White"/>
    <SolidColorBrush x:Key="DisabledForeground" Color="#666"/>
    
    <SolidColorBrush x:Key="PrimaryBorder" Color="#444"/>
    <SolidColorBrush x:Key="SecondaryBorder" Color="#333"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#444"/>
    <SolidColorBrush x:Key="ButtonHoverBorder" Color="#888"/>
    <SolidColorBrush x:Key="ButtonPressedBorder" Color="#AAA"/>
    <SolidColorBrush x:Key="ButtonDisabledBorder" Color="#222"/>
    
    <SolidColorBrush x:Key="SelectedBackground" Color="#333333"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#2A2A2A"/>
    
    <SolidColorBrush x:Key="LoadingOverlay" Color="#80000000"/>
    
</ResourceDictionary> 